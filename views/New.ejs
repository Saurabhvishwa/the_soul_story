<%- include ("./partials/header"); %>
  <div class="jumbotron dashboard-new">
      <h2 class="display-4 text-center">Create New thought</h2>
      <% if(success_msg != ''){ %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= success_msg %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <% } %>
      <div class="container-fluid">
          <form method="POST" action="http://localhost:3000/dashboard/new" id="newForm" onsubmit="return onSubmit()">
                <div class="container">
                    <label for="title">Title</label>
                <input type="title" class="form-control" name="title" id="title" aria-describedby="title" placeholder="Enter title">
                </div>
                <hr class="my-4">
                <div class="container">
                    <label for="body">Body</label>
                    <textarea class="form-control" name="body" id="body" rows="3"></textarea>
                </div>
                <div class="container-fluid">
                    <p class="lead">
                        <a type="button" id="newThought" class="btn btn-outline-primary btn-lg" href="/dashboard" role="button">Back</a>
                    </p>
                    <p class="lead">
                        <button type="submit" class="btn btn-outline-primary btn-lg">Save</button>
                    </p>
                </div>
                
          </form>
      </div>
  </div>
  